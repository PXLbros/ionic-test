# EditorConfig helps developers define and maintain consistent coding styles between different editors and IDEs
# More info: https://editorconfig.org/

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# 2 space indentation for all files
indent_style = space
indent_size = 2

# Specific rules for TypeScript and JavaScript
[*.ts, *.js, *.vue, *.json]
indent_style = space
indent_size = 2

# Specific rules for markdown (keep indentation flexible)
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Specific rules for YAML files (YAML uses 2-space indentation by convention)
[*.yml, *.yaml]
indent_style = space
indent_size = 2
